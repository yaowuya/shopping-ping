/* pages/home/home.wxss */

swiper {
  width: 100%;
  height: 400rpx;
}

image {
  width: 100%;
}

.type-list {
  width: 100%;
  margin-top: 20rpx;
}

.nav-tab {
  margin-top: 25rpx;
  margin-right: 10rpx;
  background-color: #f6f6f6;
  border-radius: 6rpx;
  height: 45rpx;
  line-height: 40rpx !important;
  font-size: 25rpx !important;
}

.nav-tab-active {
  background-color: #fa2a2d;
  color: white !important;
  font-size: 28rpx !important;
}

.card-list{
  width: 100%;
  margin-bottom: 100rpx;
}

.card-custom {
  background-color: white !important;
  margin: 20rpx 15rpx;
  border-radius: 20rpx;
}

.card-thumb {
  background-color: gray;
}

.card-title .van-tag{
  color: #ab7024 !important;
}

.card-desc {
  margin-top: 20rpx;
}

.desc-tag {
  position: absolute;
  top: 0;
  right: 0;
}

.van-card__bottom {
  position: absolute;
  bottom: 0;
}

.mini-button-copy button {
  width: 130rpx !important;
  min-height: 45rpx !important;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  color: white;
  padding-top: 3rpx;
}

.mini-button-custom button {
  width: 130rpx !important;
  min-height: 45rpx !important;
  position: absolute;
  right: 0;
  bottom: 0rpx;
}
